<Page
    x:Class="FluentSystemTestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentSystemTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fluent="using:Microsoft.Design.Fluent"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView>
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Navigate">
                <NavigationViewItem.Icon>
                    <PathIcon Data="{x:Bind fluent:FluentSymbolIcon.GetPathData(497)}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Discover">
                <NavigationViewItem.Icon>
                    <PathIcon Data="{x:Bind fluent:FluentSymbolIcon.GetPathData(1089)}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Explore">
                <NavigationViewItem.Icon>
                    <PathIcon Data="{x:Bind fluent:FluentSymbolIcon.GetPathData(770)}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Favorites">
                <NavigationViewItem.Icon>
                    <PathIcon Data="{x:Bind fluent:FluentSymbolIcon.GetPathData(661)}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <ListView ItemsSource="{x:Bind fluent:FluentSymbolIcon.AllFluentIcons.Values}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <ListViewItem>
                        <PathIcon Data="{x:Bind}"/>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </NavigationView>
</Page>
