<Page
    x:Class="FluentSystemTestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentSystemTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fluent="using:Microsoft.Design.Fluent"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView>
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Navigate">
                <NavigationViewItem.Icon>
                    <IconSourceElement>
                        <fluent:FluentIconSource Symbol="Directions"/>
                    </IconSourceElement>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Discover">
                <NavigationViewItem.Icon>
                    <IconSourceElement>
                        <fluent:FluentIconSource Symbol="Pin"/>
                    </IconSourceElement>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Explore">
                <NavigationViewItem.Icon>
                    <IconSourceElement>
                        <fluent:FluentIconSource Symbol="Home"/>
                    </IconSourceElement>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Favorites">
                <NavigationViewItem.Icon>
                    <IconSourceElement>
                        <fluent:FluentIconSource Symbol="Favorites"/>
                    </IconSourceElement>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <Button Style="{ThemeResource ButtonRevealStyle}" VerticalAlignment="Center" HorizontalAlignment="Center">
            <fluent:FluentSymbolIcon Symbol="AddCircle"/>
        </Button>
    </NavigationView>
</Page>
